<nav class="navbar">
  <ul class="navbar__items">
    {% for navname in include.nav %}
      {% assign navigation = site.data.navigation[navname] %}
      {% for nav in navigation %}
        <li class="{% if nav.children %}has-children{% endif %}">
          {% if nav.url %}
            <a href="{{ nav.url | relative_url }}">{{ nav.title }}</a>
          {% else %}
            <span>{{ nav.title }}</span>
          {% endif %}

          {% if nav.children %}
            <ul class="submenu">
              {% for child in nav.children %}
                <li>
                  <a href="{{ child.url | relative_url }}"
                     {% if child.url == page.url %}class="active"{% endif %}>
                    {{ child.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    {% endfor %}
  </ul>
</nav>
